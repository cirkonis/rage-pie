<idea-plugin>
    <id>com.github.cirkonis.ragepie</id>
    <name>RagePie</name>
    <vendor>cirkonis</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.cirkonis.ragepie.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.cirkonis.ragepie.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.cirkonis.ragepie.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <actions>
        <action id="com.github.cirkonis.ragepie.PopupDialogAction" class="com.github.cirkonis.ragepie.PopupDialogAction"
                text="Pop RAGE PIE Dialog Action">
            <override-text place="MainMenu" text="RAGE Dialog Action"/>
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
